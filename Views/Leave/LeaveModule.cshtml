@model CimtasHrPanel.Models.LeaveCreateViewModel
@{
    ViewData["Title"] = "İzin Giriş Modülü";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width:400px;">
        <h2 class="text-center">İzin Giriş Modülü</h2>

        <form asp-action="LeaveModule" asp-controller="Leave" method="get" class="mb-4">
            <div class="form-group">
                <label class="form-label">Departman</label>
                <select name="departmentId" class="form-control" onchange="this.form.submit()">
                    <option value="">Lütfen bir departman seçiniz</option>
                    @foreach (var department in Model.Departments)
                    {
                        <option value="@department.Id" selected="@(Model.SelectedDepartmentId == department.Id)">@department.DepartmentName</option>
                    }
                </select>
            </div>
            
            @if (Model.SelectedDepartmentId > 0)
            {
                <div class="form-group">
                    <label asp-for="PersonId" class="form-label">Personel adı</label>
                    <select asp-for="PersonId" name="personId" class="form-control" onchange="this.form.submit()">
                        <option value="">Lütfen personel seçiniz</option>
                        @foreach (var person in Model.Persons)
                        {
                            <option value="@person.Id" selected="@(Model.PersonId == person.Id)">@person.PersonName @person.PersonLastName</option>
                        }
                    </select>
                </div>
            }

            <div class="form-group">
                <label asp-for="StartDate" class="form-label">Başlangıç Tarihi</label>
                <input asp-for="StartDate" type="date" class="form-control" name="StartDate" value="@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "")" onchange="this.form.submit()" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="form-label">Bitiş Tarihi</label>
                <input asp-for="EndDate" type="date" class="form-control" name="EndDate" value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "")" onchange="this.form.submit()" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            @if (Model.CalculatedDurationDays.HasValue)
            {
                <div class="alert alert-info mt-3">
                    <p>Seçilen tarihler arasındaki toplam iş günü: <strong>@Model.CalculatedDurationDays</strong></p>
                </div>
            }
            
            <input type="hidden" asp-for="LeaveTypeId" />
            
            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-success btn-block">İzin Talebi Oluştur</button>
            </div>
        </form>
    </div>
</div>