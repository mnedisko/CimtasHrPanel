@model List<CimtasHrPanel.Models.LeaveHistoryViewModel>;

@{
    ViewData["Title"] = "İzin Geçmişi";
}

<div class="container mt-4">
<h1>İzin Geçmişi</h1>

<form asp-action="Index" asp-controller="Leave" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <label class="form-label">Departman</label>
            <select name="departmentId" class="form-control">
                <option value="">Tüm Departmanlar</option>
                @foreach (var department in ViewBag.Departments)
                {
                    <option value="@department.Id">@department.DepartmentName</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Başlangıç Tarihi</label>
            <input type="date" name="startDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Bitiş Tarihi</label>
            <input type="date" name="endDate" class="form-control" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Filtrele</button>
        </div>
    </div>
</form>

<div class="table-responsive">
<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>Çalışan</th>
            <th>Departman</th>
            <th>İzin Türü</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Süre</th>
            <th>Durum</th>
            <th title="Personelin maksimum izin hakkı">PMİH</th>
            <th title="Personelin kalan izin hakkı">PKİH</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr class="@(leave.IsOverLeaveUsed ? "table-danger" : "")">
                <td>@leave.PersonName</td>
                <td>@leave.DepartmentName</td>
                <td>@leave.LeaveTypeName</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.DurationDays gün</td>
                <td>@leave.Status</td>
                <td>@leave.PersonMaxAnnualLeaveLimit gün</td>
                <td>@leave.PersonTotalAnnualLeaveLimit gün</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@leave.LeaveRequestId">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@leave.LeaveRequestId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

@if (Model.Any(l => l.IsOverLeaveUsed))
{
    <div class="alert alert-danger" role="alert">
        <p><strong>Uyarı:</strong> Kırmızı ile gösterilen çalışanlar izin limitini aşmıştır</p>
    </div>
}
</div>
